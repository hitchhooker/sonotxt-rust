# Database
DATABASE_URL=postgres://sonotxt:sonotxt@localhost:5432/sonotxt

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Admin
ADMIN_TOKEN=your-admin-token-here

# DeepInfra TTS
DEEPINFRA_TOKEN=your-deepinfra-token-here

# MinIO/S3
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET=sonotxt-audio

# Audio URL - use HAProxy audio backend in production for byte-range/CORS
# Development: http://localhost:9000/sonotxt-audio
# Production: https://audio.sonotxt.com/sonotxt-audio
AUDIO_PUBLIC_URL=http://localhost:9000/sonotxt-audio

# Billing
COST_PER_CHAR=0.00001
COST_PER_MINUTE=0.004

# Stripe secrets are sealed in hwpay vault (~/.hwpay/)
# Seal your keys using: POST /admin/vault/seal-stripe
# with body: {"secret_key": "sk_live_xxx", "webhook_secret": "whsec_xxx"}
#
# VAULT_PASSWORD is only needed if TPM is unavailable (encrypted file fallback)
# VAULT_PASSWORD=your-vault-password

# App URL (for Stripe redirects)
APP_URL=https://sonotxt.com

# CORS (comma-separated for production)
CORS_ORIGINS=

# Logging
RUST_LOG=info
